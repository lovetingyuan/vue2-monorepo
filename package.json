{
  "name": "monorepo",
  "version": "0.0.0",
  "description": "配置化项目monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "turbo run build --include-dependencies",
    "dev": "turbo run dev",
    "play": "turbo run dev --scope=playground --include-dependencies",
    "lint": "turbo run lint --parallel",
    "lint:fix": "turbo run lint:fix --parallel",
    "lint:all": "eslint . --fix",
    "types": "turbo run types",
    "docs": "turbo run dev --scope=docs --scope=ui --no-deps --include-dependencies",
    "build:docs": "turbo run build --scope=docs",
    "release": "pnpm run release --filter",
    "clean": "clean"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.1.0",
    "@commitlint/config-conventional": "^16.2.1",
    "@types/node": "^16.11.10",
    "@vue/tsconfig": "^0.1.3",
    "cross-env": "^7.0.3",
    "eslint": "^8.10.0",
    "eslint-plugin-config": "workspace:*",
    "ts-config": "workspace:*",
    "lint-staged": "^12.3.4",
    "rimraf": "^3.0.2",
    "scripts": "workspace:*",
    "simple-git-hooks": "^2.7.0",
    "turbo": "latest",
    "typescript": "~4.5.2",
    "vite": "^2.9.1",
    "vite-plugin-vue2": "^1.9.3",
    "vue": "^2.6.14",
    "vue-template-compiler": "^2.6.14",
    "vue-tsc": "^0.34.0"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=16.0.0"
  },
  "packageManager": "pnpm@6.32.3",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "scope-empty": [
        2,
        "never"
      ],
      "subject-case": [
        0,
        "never"
      ],
      "scope-enum": [
        2,
        "always",
        [
          "ui",
          "pages",
          "eslint-config",
          "config-page",
          "renderer",
          "scripts",
          "ts-config",
          "vite-plugin-pages",
          "playground",
          "docs",
          "release",
          "deps",
          "chore"
        ]
      ]
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "./packages/eslint-plugin/project-config.js"
    ]
  },
  "lint-staged": {
    "**/*.{js,vue,jsx,ts,tsx}": "pnpm exec eslint"
  },
  "simple-git-hooks": {
    "commit-msg": "pnpm exec commitlint --edit $1",
    "pre-commit": "pnpm exec lint-staged"
  }
}
