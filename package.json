{
  "name": "monorepo",
  "version": "0.0.0",
  "description": "vue2 + ts + monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "turbo run build --include-dependencies",
    "dev": "turbo run dev",
    "play": "turbo run dev --scope=playground --include-dependencies",
    "lint": "turbo run lint --parallel",
    "lint:fix": "turbo run lint:fix --parallel",
    "lint:all": "eslint . --fix",
    "types": "turbo run types",
    "docs": "turbo run dev --scope=docs --scope=ui --no-deps --include-dependencies",
    "build:docs": "turbo run build --scope=docs",
    "release": "pnpm run release --filter",
    "clean": "clean"
  },
  "devDependencies": {
    "@types/node": "^16.11.10",
    "@vue/tsconfig": "^0.1.3",
    "cross-env": "^7.0.3",
    "eslint": "^8.13.0",
    "eslint-plugin-config": "workspace:*",
    "fs-extra": "^10.0.1",
    "lint-staged": "^12.3.7",
    "rimraf": "^3.0.2",
    "scripts": "workspace:*",
    "simple-git-hooks": "^2.7.0",
    "ts-config": "workspace:*",
    "turbo": "latest",
    "typescript": "~4.5.2",
    "vite": "^2.9.1",
    "vite-plugin-vue2": "^1.9.3",
    "vue": "^2.6.14",
    "vue-template-compiler": "^2.6.14",
    "vue-tsc": "^0.34.6"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=16.0.0"
  },
  "packageManager": "pnpm@6.32.3",
  "eslintConfig": {
    "root": true,
    "extends": [
      "./packages/eslint-plugin/project-config.js"
    ]
  },
  "lint-staged": {
    "**/*.{js,vue,jsx,ts,tsx}": "pnpm exec eslint"
  },
  "simple-git-hooks": {
    "commit-msg": "pnpm exec lint-commit",
    "pre-commit": "pnpm exec lint-staged"
  }
}
